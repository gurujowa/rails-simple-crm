<%= simple_form_for @teacher_order, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :teacher_id do %>
    <%= f.select :teacher_id, options_from_collection_for_select(@teachers, :id, :name) %>
    <% end %>
    <%= f.input :unit_price %>
    <%= f.association :courses, input_html: { class: 'with-select2' }, label_method: :to_select_label %>
    <%= f.input :invoice_flg %>
    <%= f.input :payment_flg %>
    <%= f.input :payment_term %>
    <%= f.input :memo %>
    <%= f.button :submit %>
<% end %>
