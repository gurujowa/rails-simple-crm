<h1>estimates 一覧</h1>

<table id="estimates_datatable" class="default_datatables">
  <thead>
    <tr>
      <th>件名</th>
      <th>会社名</th>
      <th>期日</th>
      <th>合計金額</th>
      <th>発行済フラグ</th>
      <th>作成日</th>
      <th>更新日</th>
      <th>Memo</th>
      <th>CH</th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.title %></td>
        <td><%= estimate.company.client_name %></td>
        <td><%= estimate.expired %></td>
        <td><%= estimate.total_price %></td>
        <td><%= check_m_img estimate.send_flg %></td>
        <td><%= estimate.created_at %></td>
        <td><%= estimate.updated_at %></td>
        <td><%= estimate.memo %></td>
        <td>
<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"> Action <span class="caret"></span> </a>
  <ul class="dropdown-menu">
    <li><%= link_to '見積書の発行をする', estimate %></li>
    <li><%= link_to '編集する', edit_estimate_path(estimate) %></li>
    <li><%= link_to '削除する', estimate, method: :delete, data: { confirm: '本当に削除しますか' } %></li>
  </ul>
</div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

