= simple_form_for(@course, :html => { :class => "form-horizontal" } ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :company_id , input_html: { class: 'input-xxlarge' }
    = f.input :name
    = f.input :station
    = f.input :address
    = f.input :responsible
    = f.input :tel
    = f.input :memo, :input_html => { :rows => 6, :class => "input-xxlarge" }, :label => "memo"

  .form-actions
    = f.button :submit
