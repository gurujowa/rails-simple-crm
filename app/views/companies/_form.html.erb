
<% @company.errors.full_messages.each do |msg|%>
<li><%=msg%></li>
<%end%>
<div class="control-group">
 <label class="control-label">会社名</label><div class="controls"> <%= form.text_field :client_name %></div >
</div>
<div class="control-group">
<label class="control-label">業種</label> <div class="controls"><%= form.collection_select(:industry_id, @industries, :id, :name, {:include_blank => true }) %>(<%= link_to "業種の追加", {controller: "industries"}%>)</div>
</div>
<div class="control-group">
<label class="control-label">担当者名</label> <div class="controls"><%= form.text_field :client_person %></div>
</div>
<div class="control-group">
<label class="control-label">営業マン</label> <div class="controls"><%= form.select :sales_person , options_from_users(@company.sales_person), :include_blank => true %></div>
</div>
<div class="control-group">
<label class="control-label">見込み度</label> <div class="controls"><%= form.select :chance , options_chance(@company.chance), :include_blank => true  %></div>
</div>
<div class="control-group">
<label class="control-label">連絡先</label><div class="controls"> TEL<%= form.text_field :tel %> FAX<%= form.text_field :fax %> Mail<%= form.text_field :mail %></div>
</div>
<div class="control-group">
   <label class="control-label">新規獲得元</label>
   <div class="controls"> <%= form.collection_select :campaign_id , Campaign.all, :id, :name, :include_blank => true %><%= link_to "(新規追加)", campaigns_path %></div>
</div>
<div class="control-group">
<label class="control-label">ステータス </label>
<div class="controls"><%= form.select :status_id, options_from_statuses(@company.status_id), :include_blank => true %>
</div></div>

<div class="control-group">
<label class="control-label">住所 </label>
<div class="controls">
<table class="table table-condensed">
	<tr>
		<td>郵便番号</td>
		<td>都道府県</td>
		<td>市町村</td>
	</tr>
	<tr>
		<td><%= form.text_field :zipcode %></td>
		<td><%= form.text_field :prefecture %></td>
		<td><%= form.text_field :city %></td>
	</tr>
	<tr>
    	<td>番地</td>
	    <td>建物名</td>
    </tr>
    <tr>
		<td><%= form.text_field :address %></td>
		<td><%= form.text_field :building %></td>
    </tr>
</table>
<a class="btn" onClick='window.open("http://www.google.co.jp/search?q=" + $("#company_prefecture").val() + $("#company_city").val() + $("#company_address").val() + " 郵便番号","_blank")'>郵便番号検索</a>
<a class="btn" onClick='window.open("http://maps.google.co.jp/maps?q=" + $("#company_prefecture").val() + $("#company_city").val() + $("#company_address").val(),"_blank")'>Google Map</a>
<br>
</div></div>
<div class="control-group">
<label class="control-label">予定日</label>
<div class="controls">
	<table class="table">
	<tr>
	  <td>初回アポ</td><td> <%= form.text_field :appoint_plan,'data-format' => 'yyyy-MM-dd', :class=>"datepicker"%></td>
	</tr><tr>
	  <td>提案見積日</td><td> <%= form.text_field :proposed_plan,'data-format' => 'yyyy-MM-dd', :class=>"datepicker"%></td>	  
	</tr><tr>
	  <td>契約日</td><td> <%= form.text_field :contract_plan,'data-format' => 'yyyy-MM-dd', :class=>"datepicker"%></td>	  
	</tr><tr>
	  <td>入金日</td><td> <%= form.text_field :payment_plan,'data-format' => 'yyyy-MM-dd', :class=>"datepicker"%></td>	  
	</tr>
	</table>
	</div>
</div>
<div class="control-group">
<label class="control-label">コンタクト </label>
<div class="controls">
    <% contact_index = 1 %>
    <table class="table">
	<%= form.fields_for :contacts do |c| %>
	  <tr>
	  	<td><%= contact_index %></td>
        <td style="width:100px;">
            <% ContactType.all.each do |t| %>
            <%= c.radio_button :con_type, t.id , :class =>"icheck"%><%= c.label "con_type_"+ t.id.to_s, t.name %><br>
          <% end %>
        </td>
        <td><%= c.text_area :memo, :rows => "6" , :style =>"width:100%" %><br>
      &nbsp;&nbsp;&nbsp;担当者：<%= c.object.getCreatedBy() %>, 作成日: <%= simple_date(c.object.created_at) %><br>
      <%= c.hidden_field :created_by%>
      <% contact_index += 1%></td>
      </tr>
	<% end %>
</table>
</div></div>



<div class="form-actions">
<%= submit_tag "編集する", :class=>"btn btn-primary" %>
</div>
</form>
