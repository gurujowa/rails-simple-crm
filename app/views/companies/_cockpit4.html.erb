<div class="row-fluid">
	<div class="span12 well">
		<h5>コースの未完了タスク</h5>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>会社名</th>
					<th>コース名</th>
					<th>開始日</th>
					<th>終了日</th>
					<th>メッセージ</th>
				</tr>
			</thead>
			<tbody>
				<% if @course_alert.present? %>
				<% @course_alert.errors.each do |c|%>
				<tr>
          <td><%= link_to c.client_name, {controller: "companies", action: "edit", id: c.course.company.id} %></td>
					<td><%= link_to c.course.name, {controller: "courses", action: "edit", id: c.course.id} %></td>
					<td><%= c.start_date %></td>
          <td><%= c.end_date %></td>
					<td><%= c.message %></td>
				</tr>
				<%end%><%end%>
			</tbody>
		</table>
	</div>
</div>
