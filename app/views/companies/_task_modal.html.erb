
<div id="new_task" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">タスク作成</h3>
  </div>
  <div class="modal-body">
  <%= form_for(@task, :url => url_for(:controller => 'tasks', :action => 'create')) do |f| %>

  <div class="field">
    <input type="hidden" name="type_id" />
    <input type="hidden" name="company_id" value="<%= @company.id %>" />
  </div>
  <div class="field">
    <label>期日</label>
    <%= f.text_field :duedate, 'data-format' => 'yyyy-MM-dd hh:mm:ss', :class=>"datepicker" %>
  </div>
  <div class="field">
    <label>名前</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label>担当者</label>
    <%= f.select :assignee , options_from_users(@task.assignee) %>
  </div>
  <div class="field">
    <label>メモ</label>
    <%= f.text_area :note %>
  </div>


  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">キャンセル</button>
    <%= f.submit "作成する", :remote => true%>
    <button class="btn btn-primary" id="task_submit" aria-hidden="true" data-dismiss="modal">作成する</button>
  </div>
<% end %>
</div>
