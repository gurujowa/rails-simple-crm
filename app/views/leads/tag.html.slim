h1 = @tag_name + "のタグ一覧"

.panel.panel-default
  .panel-body
    = form_tag({action: "tag"}, method: :get)
      | タグの名前で検索する
      = select_tag :name, options_for_select(@tag_list), id: "lead_tag_list_search", include_blank: true
      = submit_tag "タグ検索"

= render 'list_table', locals: {leads: @leads}

.panel.panel-default
  .panel-heading タグクラウド
  .panel-body
    - tag_cloud(@tags, %w(tag_cloud1 tag_cloud2 tag_cloud3 tag_cloud4) )do |tag, css_class|
      span.tag_cloud_line = link_to tag.name,  { :action => :tag, :name => tag.name }, :class => css_class
      | &nbsp;
