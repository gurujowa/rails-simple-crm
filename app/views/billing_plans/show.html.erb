      /* for modern brouser */
      .clearfix:after {
        content: ".";
        display: block;
        clear: both;
        height: 0;
        visibility: hidden;
      }
      /* IE7,MacIE5 */
      .clearfix {
        display: inline-block;
      }
      /* WinIE6 below, Exclude MacIE5 \*/
      * html .clearfix {
        height: 1%;
      }
      .clearfix {
        display: block;
      }
      /**/
    </style>

    <div class="wrapper">


