<%= simple_form_for(@client_order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_id %>
    <%= f.input :price %>
    <%= f.input :invoice_flg %>
    <%= f.input :payment_flg %>
    <%= f.input :invoice_date, as: :date_picker %>
    <%= f.input :payment_date, as: :date_picker %>
    <%= f.input :memo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
