<%= form_for(@teacher,:html => {:class => "form-horizontal"}) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
  	<label class="control-label">名前（漢字）</label>
    <div class="controls">姓<%= f.text_field :last_kanji %>名<%= f.text_field :first_kanji %></div>
  </div>
  <div class="control-group">
  	<label class="control-label">名前（かな）</label>
    <div class="controls">姓<%= f.text_field :last_kana %>名<%= f.text_field :first_kana %></div>
  </div>
  <div class="control-group">
    <%= f.label :work_possible , :class => "control-label" %>
    <div class="controls"><%= f.select :work_possible, options_work_possible %></div>
  </div>
  <div class="control-group">
    <%= f.label :genre , :class => "control-label" %>
    <div class="controls"><%= f.text_field :genre %></div>
  </div>
  <div class="control-group">
    <%= f.label :bill , :class => "control-label" %>
    <div class="controls"><%= f.text_field :bill %></div>
  </div>
  <div class="control-group">
    <%= f.label :tel , :class => "control-label" %>
    <div class="controls"><%= f.text_field :tel %></div>
  </div>
  <div class="control-group">
    <%= f.label :email , :class => "control-label" %>
    <div class="controls"><%= f.text_field :email %></div>
  </div>

  <div class="control-group">
    <%= f.label :director_id , :class => "control-label" %>
    <div class="controls">
      <%= f.select :director_id , options_teachers(@teacher.director_id),{:include_blank => true}, :class => "select_teacher_id input-medium" %>
  </div>
  </div>

  <div class="control-group">
    <%= f.label :memo , :class => "control-label" %>
    <div class="controls"><%= f.text_area :memo %></div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary", :value => "保存する" %>
  </div>
<% end %>
