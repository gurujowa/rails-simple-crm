<h1>講師 一覧</h1>

<table class="teachers_datatable">
  <thead>
    <tr>
      <th>名前（漢字）</th>
      <th>名前（かな）</th>
      <th>仕事可能</th>
      <th>ジャンル</th>
      <th>単価</th>
      <th>電話</th>
      <th>メール</th>
      <th>メモ</th>
      <th>CH</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.last_kanji %> <%= teacher.first_kanji %></td>
        <td><%= teacher.last_kana %> <%= teacher.first_kana %></td>
        <td><%= get_work_possible(teacher.work_possible) %></td>
        <td><%= teacher.genre %></td>
        <td><%= teacher.bill %></td>
        <td><%= teacher.tel %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.memo %></td>
        <td><%= link_to '編集', edit_teacher_path(teacher), :class => "btn" %>
        	<%= link_to '削除', teacher, method: :delete, data: { confirm: '本当に削除しますか' }, :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
