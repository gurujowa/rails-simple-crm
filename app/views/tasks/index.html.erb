<h1>タスク一覧</h1>

<table id="tasks_datatable" class="display">
  <thead>
    <tr>
      <th>タスクの種類</th>
      <th>期日</th>
      <th>名前</th>
      <th>担当者</th>
      <th>会社名</th>
      <th>作成者</th>
      <th>メモ</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_type.name %></td>
        <td><%= task.duedate %></td>
        <td><%= task.name %></td>
        <td><%= get_user_name(task.assignee) %></td>
        <td><%= task.company.client_name %></td>
        <td><%= get_user_name(task.created_by) %></td>
        <td><%= task.note %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいタスク', new_task_path %>
<%= link_to 'タスクタイプの変更', :controller => "task_types" %>
